{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "opensspm.ruleset.schema.json",
  "title": "Open SSPM Ruleset (schema_version: 1)",
  "description": "Ruleset documents define what to evaluate (rules) and include metadata such as scope and source. No evaluation logic is encoded here; engines interpret check types.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "kind",
    "ruleset"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Document schema version discriminator. Must be 1 for Open SSPM v1 documents."
    },
    "kind": {
      "type": "string",
      "const": "opensspm.ruleset",
      "description": "Document kind discriminator. Must be 'opensspm.ruleset'."
    },
    "ruleset": {
      "type": "object",
      "description": "Ruleset definition container.",
      "additionalProperties": false,
      "required": [
        "key",
        "name",
        "scope",
        "rules"
      ],
      "properties": {
        "key": {
          "type": "string",
          "minLength": 1,
          "description": "Unique ruleset identifier (unique across the repository)."
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable ruleset name."
        },
        "scope": {
          "type": "object",
          "description": "Evaluation scope for this ruleset.",
          "additionalProperties": false,
          "required": [
            "kind"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "global",
                "connector_instance"
              ],
              "description": "Scope kind. 'global' applies without a connector instance; 'connector_instance' applies to a specific connector kind."
            },
            "connector_kind": {
              "type": [
                "string",
                "null"
              ],
              "description": "Required when scope.kind is 'connector_instance'. Forbidden (absent/null/empty) when scope.kind is 'global'."
            }
          }
        },
        "status": {
          "type": "string",
          "enum": [
            "active",
            "deprecated"
          ],
          "default": "active",
          "description": "Lifecycle status of the ruleset."
        },
        "description": {
          "type": "string",
          "description": "Optional description (Markdown permitted, treated as opaque text by engines)."
        },
        "source": {
          "type": "object",
          "description": "Optional external standard or source metadata for traceability (e.g. CIS benchmark).",
          "additionalProperties": false,
          "required": [
            "name",
            "version",
            "date"
          ],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1,
              "description": "Source name (e.g. 'CIS')."
            },
            "version": {
              "type": "string",
              "minLength": 1,
              "description": "Source version label (e.g. 'v1.0.0')."
            },
            "date": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "description": "Source publication date in YYYY-MM-DD."
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Optional URL to the source landing page."
            }
          }
        },
        "tags": {
          "type": "array",
          "description": "Optional tags for filtering and grouping.",
          "items": {
            "type": "string"
          }
        },
        "references": {
          "type": "array",
          "description": "External references for mapping and traceability.",
          "items": {
            "$ref": "#/definitions/reference"
          }
        },
        "framework_mappings": {
          "type": "array",
          "description": "Optional framework/control mappings.",
          "items": {
            "$ref": "#/definitions/framework_mapping"
          }
        },
        "requirements": {
          "$ref": "#/definitions/ruleset_requirements"
        },
        "data_contracts": {
          "type": "array",
          "description": "Optional version declarations for datasets used by checks.",
          "items": {
            "$ref": "#/definitions/dataset_contract_ref"
          }
        },
        "rules": {
          "type": "array",
          "description": "Rules in this ruleset. Deterministically sorted by rule.key during compilation.",
          "items": {
            "$ref": "#/definitions/rule"
          }
        }
      }
    }
  },
  "definitions": {
    "reference": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "url"
      ],
      "properties": {
        "title": {
          "type": "string",
          "description": "Optional short title for the reference."
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Reference URL."
        },
        "type": {
          "type": "string",
          "enum": [
            "documentation",
            "standard",
            "blog",
            "ticket",
            "other"
          ],
          "default": "other",
          "description": "Reference type."
        }
      }
    },
    "framework_mapping": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "framework",
        "control"
      ],
      "properties": {
        "framework": {
          "type": "string",
          "minLength": 1
        },
        "control": {
          "type": "string",
          "minLength": 1
        },
        "enhancement": {
          "type": "string"
        },
        "coverage": {
          "type": "string",
          "enum": [
            "direct",
            "partial",
            "supporting"
          ],
          "default": "supporting"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "ruleset_requirements": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "api_scopes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "permissions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "dataset_contract_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "dataset",
        "version"
      ],
      "properties": {
        "dataset": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "description": {
          "type": "string"
        }
      }
    },
    "monitoring": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "automated",
            "partial",
            "manual",
            "unsupported"
          ]
        },
        "reason": {
          "type": "string"
        }
      }
    },
    "parameters": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "defaults"
      ],
      "properties": {
        "defaults": {
          "type": "object",
          "description": "Default values for parameter names.",
          "additionalProperties": true
        },
        "schema": {
          "type": "object",
          "description": "Optional parameter schema entries (keys must exist in defaults).",
          "additionalProperties": {
            "$ref": "#/definitions/parameter_schema"
          }
        }
      }
    },
    "parameter_schema": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "string",
            "boolean",
            "integer",
            "number",
            "array",
            "object"
          ]
        },
        "description": {
          "type": "string"
        },
        "minimum": {
          "type": "number"
        },
        "maximum": {
          "type": "number"
        },
        "enum": {
          "type": "array",
          "minItems": 1
        }
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "affected_resources": {
          "$ref": "#/definitions/affected_resources"
        },
        "summary_templates": {
          "$ref": "#/definitions/summary_templates"
        }
      }
    },
    "affected_resources": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "dataset",
        "id_field",
        "display_field"
      ],
      "properties": {
        "dataset": { "type": "string", "minLength": 1 },
        "id_field": { "type": "string", "minLength": 1 },
        "display_field": { "type": "string", "minLength": 1 }
      }
    },
    "summary_templates": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pass": { "type": "string" },
        "fail": { "type": "string" },
        "unknown": { "type": "string" },
        "error": { "type": "string" },
        "not_applicable": { "type": "string" }
      }
    },
    "remediation": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "instructions"
      ],
      "properties": {
        "instructions": { "type": "string", "minLength": 1 },
        "risks": { "type": "string" },
        "effort": { "type": "string", "enum": ["low", "medium", "high"] }
      }
    },
    "lifecycle": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "rule_version": { "type": "string" },
        "is_active": { "type": "boolean" },
        "replaced_by": { "type": "string" }
      }
    },
    "rule": {
      "type": "object",
      "description": "A single control (rule) evaluated by an engine using the referenced check type.",
      "additionalProperties": false,
      "required": [
        "key",
        "title",
        "severity",
        "monitoring",
        "required_data"
      ],
      "properties": {
        "key": {
          "type": "string",
          "minLength": 1,
          "description": "Rule identifier unique within the ruleset (e.g. 'OKTA-APP-000020')."
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "summary": {
          "type": "string",
          "description": "Optional short summary."
        },
        "description": {
          "type": "string",
          "description": "Optional longer description."
        },
        "category": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "severity": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low",
            "info"
          ],
          "description": "Severity classification used by consumers."
        },
        "monitoring": {
          "$ref": "#/definitions/monitoring"
        },
        "required_data": {
          "type": "array",
          "description": "Declarative dataset coverage list (must include datasets referenced by the check).",
          "items": { "type": "string" }
        },
        "parameters": {
          "$ref": "#/definitions/parameters"
        },
        "evidence": {
          "$ref": "#/definitions/evidence"
        },
        "remediation": {
          "$ref": "#/definitions/remediation"
        },
        "references": {
          "type": "array",
          "items": { "$ref": "#/definitions/reference" }
        },
        "framework_mappings": {
          "type": "array",
          "items": { "$ref": "#/definitions/framework_mapping" }
        },
        "lifecycle": {
          "$ref": "#/definitions/lifecycle"
        },
        "check": {
          "description": "Evaluation primitive reference. Engines interpret check.type; no evaluation logic is generated from this schema.",
          "$ref": "#/definitions/check"
        }
      }
    },
    "check": {
      "type": "object",
      "description": "Typed check input. Interpretation is performed by an evaluation engine (out of scope for this repo).",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "dataset.field_compare",
            "dataset.count_compare",
            "dataset.join_count_compare",
            "manual.attestation"
          ],
          "description": "Check type discriminator. Engines implement semantics for each supported type."
        },
        "dataset_version": {
          "type": "integer",
          "minimum": 1,
          "description": "Optional dataset contract version applied to all dataset references in the check."
        },
        "on_missing_dataset": {
          "type": "string",
          "enum": [
            "unknown",
            "error"
          ],
          "default": "unknown"
        },
        "on_permission_denied": {
          "type": "string",
          "enum": [
            "unknown",
            "error"
          ],
          "default": "unknown"
        },
        "on_sync_error": {
          "type": "string",
          "enum": [
            "unknown",
            "error"
          ],
          "default": "error"
        },
        "notes": {
          "type": "string"
        },
        "dataset": {
          "type": "string",
          "minLength": 1,
          "description": "Dataset key used by dataset.field_compare and dataset.count_compare."
        },
        "where": {
          "type": "array",
          "items": { "$ref": "#/definitions/where_clause" }
        },
        "assert": {
          "$ref": "#/definitions/predicate"
        },
        "expect": {
          "$ref": "#/definitions/field_compare_expect"
        },
        "compare": {
          "$ref": "#/definitions/compare"
        },
        "left": {
          "$ref": "#/definitions/join_side"
        },
        "right": {
          "$ref": "#/definitions/join_side"
        },
        "on_unmatched_left": {
          "type": "string",
          "enum": [
            "ignore",
            "count",
            "error"
          ],
          "default": "ignore"
        }
      }
    },
    "operator": {
      "type": "string",
      "enum": [
        "eq",
        "neq",
        "lt",
        "lte",
        "gt",
        "gte",
        "exists",
        "absent",
        "in",
        "contains"
      ]
    },
    "where_clause": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "op"
      ],
      "properties": {
        "path": { "type": "string" },
        "left_path": { "type": "string" },
        "right_path": { "type": "string" },
        "op": { "$ref": "#/definitions/operator" },
        "value": {},
        "value_param": { "type": "string" }
      }
    },
    "predicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "op"
      ],
      "properties": {
        "path": { "type": "string" },
        "left_path": { "type": "string" },
        "right_path": { "type": "string" },
        "op": { "$ref": "#/definitions/operator" },
        "value": {},
        "value_param": { "type": "string" }
      }
    },
    "compare": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "op"
      ],
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "eq",
            "neq",
            "lt",
            "lte",
            "gt",
            "gte"
          ]
        },
        "value": {
          "type": "integer"
        },
        "value_param": {
          "type": "string"
        }
      }
    },
    "field_compare_expect": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "match": {
          "type": "string",
          "enum": [
            "all",
            "any",
            "none"
          ],
          "default": "all"
        },
        "min_selected": {
          "type": "integer",
          "minimum": 0
        },
        "on_empty": {
          "type": "string",
          "enum": [
            "pass",
            "fail",
            "unknown",
            "error"
          ],
          "default": "unknown"
        }
      }
    },
    "join_side": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "dataset",
        "key_path"
      ],
      "properties": {
        "dataset": { "type": "string", "minLength": 1 },
        "key_path": { "type": "string", "minLength": 1 }
      }
    }
  }
}
